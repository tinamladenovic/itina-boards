datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

enum MemberRole {
  OWNER
  EDITOR
  VIEWER
}

model User {
  id           String        @id @default(cuid())
  email        String        @unique
  name         String?
  boards       Board[]       @relation("UserBoards") // ← back-relacija
  memberships  BoardMember[]
  comments     Comment[]
  createdCards Card[]        @relation("UserCreatedCards") // ← back-relacija za Card.createdBy
  createdAt    DateTime      @default(now())
}

model Board {
  id        String        @id @default(cuid())
  title     String
  owner     User          @relation("UserBoards", fields: [ownerId], references: [id], onDelete: Cascade) // ← mora isti naziv relacije
  ownerId   String
  members   BoardMember[]
  lists     List[]
  events    Event[]
  createdAt DateTime      @default(now())
  updatedAt DateTime      @updatedAt
}

model BoardMember {
  id      String     @id @default(cuid())
  board   Board      @relation(fields: [boardId], references: [id], onDelete: Cascade)
  boardId String
  user    User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId  String
  role    MemberRole @default(EDITOR)

  @@unique([boardId, userId])
}

model List {
  id      String @id @default(cuid())
  board   Board  @relation(fields: [boardId], references: [id], onDelete: Cascade)
  boardId String
  title   String
  order   Float  @default(0)
  cards   Card[]
}

model Card {
  id          String    @id @default(cuid())
  list        List      @relation(fields: [listId], references: [id], onDelete: Cascade)
  listId      String
  title       String
  description String?   @db.Text
  order       Float     @default(0)
  createdBy   User?     @relation("UserCreatedCards", fields: [createdById], references: [id], onDelete: SetNull) // ← opcionalno + ime relacije
  createdById String?
  comments    Comment[]
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}

model Comment {
  id        String   @id @default(cuid())
  card      Card     @relation(fields: [cardId], references: [id], onDelete: Cascade)
  cardId    String
  author    User?    @relation(fields: [authorId], references: [id], onDelete: SetNull) // ← opcionalno
  authorId  String?
  body      String   @db.Text
  createdAt DateTime @default(now())
}

model Event {
  id        String   @id @default(cuid())
  board     Board    @relation(fields: [boardId], references: [id], onDelete: Cascade)
  boardId   String
  type      String
  payload   Json
  createdAt DateTime @default(now())
}
